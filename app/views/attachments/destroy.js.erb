<% id_selector = "##{@attachable.class.to_s.downcase}#{@attachable.id}" %>

$('<%= id_selector %>').find('.attached-files')
                       .html('<%= render "attachments/attached_files", attachable: @attachable %>');
$('<%= id_selector %>').find('.attached-files-x-buttons')
                       .html('<%= render "attachments/attached_files", attachable: @attachable, show_x_buttons: true %>');

$('.flash').html('');
<% if flash.any? then %>
 $('.flash').html('<%= render "layouts/flash" %>');
<% end %>
